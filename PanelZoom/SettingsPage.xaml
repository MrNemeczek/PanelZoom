<Page x:Class="PanelZoom.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PanelZoom"
      mc:Ignorable="d" 
      d:DesignHeight="419" d:DesignWidth="720"
      Title="SettingsPage">

    <Grid Background="{StaticResource LightBlue}">
        <StackPanel>
            <Label Content="Zmiana podpisu Zoom" FontSize="14"/>
            <TextBox/>
            <Label Content="Zmiana hasła" FontSize="14"/>
            <Separator/>
            <Label Content="Wpisz stare hasło" FontSize="14"/>
            <PasswordBox/>
            <Label Content="Wpisz nowe hasło" FontSize="14"/>
            <PasswordBox/>
            <Label Content="Powtórz nowe hasło" FontSize="14"/>
            <PasswordBox/>
            <Button Content="Zapisz" FontSize="14"/>

        </StackPanel>
    </Grid>
</Page>
